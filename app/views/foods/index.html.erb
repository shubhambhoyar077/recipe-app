<h1>Food List</h1>

<div>
<%= link_to "Add Food", new_food_path %>
</div>

<table class = "foods">
<thead>
<tr>
<th>Food</th>
<th>Measurement Unit</th>
<th>Unit price</th>
<th>Quantity</th>
<th>Actions</th>
</tr>
</thead>
<tbody>
<% @foods.each do |food| %>
<tr>
<td><%= food.name %></td>
<td><%= food.measurement_unit %></td>
<td>$<%= food.price %></td>
<td><%= food.quantity %></td>
<td><%= link_to "Remove", food_path(food), data: {
    confirm: "Are you sure you want to delete: #{food.name}?",
}, method: :delete %></td>
</tr>
<% end %>
</tbody>
</table>